---
import Layout from '../../layouts/Layout.astro';
import Title from '../../components/Title.svelte';
import { getBlogWithContent } from '../../lib/blogs';

export const prerender = false;

const slug = Astro.params.slug ?? '';
const blogEntry = getBlogWithContent(slug);

if (!blogEntry) {
  return Astro.redirect('/blog');
}

const { html, ...blog } = blogEntry;
---
<Layout title={`${blog.title} - Osa`} description={blog.description}>
  <div class="mt-16">
    <div class="mb-4">
      <Title>BLOG</Title>
      <div class="max-w-4xl">
        {html ? (
          <article class="prose prose-base md:prose-lg max-w-none" set:html={html} />
        ) : (
          <article class="prose prose-base md:prose-lg max-w-none">
            <p class="text-gray-500 italic">
              We couldn't find the content for this post yet.
            </p>
          </article>
        )}

        <div class="mt-12">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-rose-400 hover:text-rose-300 transition-colors"
          >
            ‚Üê Back to all posts
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>

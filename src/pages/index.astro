---
import Layout from "../layouts/Layout.astro";

import Bluesky from "../components/svgs/Bluesky.astro";
import Github from "../components/svgs/Github.astro";
import Project from "../components/Project.astro";
import XLogo from "../components/svgs/xLogo.astro";
import { type ProjectType } from "../types/project";

const projects: ProjectType[] = [
  {
    name: "mirrow",
    logo: "https://cdn.statically.io/gh/MirrowApp/mirrow-app/main/public/favicon.svg",
    href: "https://mirrow.app/",
  },
];
---

<Layout>
  <div class="flex min-h-screen">
    <div
      class="sm:border sm:border-[#404040] shadow-box bg-black rounded-2xl w-96 m-auto p-4 space-y-2 flex flex-col"
    >
      <div class="flex gap-4">
        <img
          src="https://avatars.githubusercontent.com/u/70810737?v=4"
          alt="My GitHub avatar of the Ottawa River"
          class="rounded-full h-14"
        />
        <p class="font-bold text-4xl my-auto">Osa Mannella</p>
      </div>
      <p class="text-gray-500">Fullstack Developer ‚Ä¢ Compiler Writer</p>
      <p class="text-lg font-medium">Projects:</p>
      <div class="mb-5">
        {projects.map((project) => <Project {...project} />)}
      </div>
      <span class="flex space-x-4 sm:ml-auto mx-auto sm:mx-0"
        ><Bluesky /><Github /><XLogo /></span
      >
      <p class="text-[#404040] text-sm mx-auto">
        üè≥Ô∏è‚Äç‚öß Trans rights are human rights
      </p>
    </div>
  </div>
</Layout>

<style>
  .shadow-box {
    filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.2));
  }
</style>

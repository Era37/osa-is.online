---
const tabs = ["Home", "About", "Contact", "Projects"];
---

<div>
  <div
    class="bg-black p-2 flex text-white w-full md:w-[50vw] rounded-full mx-auto space-x-4 my-box"
  >
    <div class="h-5 w-5 rounded-full border-3 border-white my-auto"></div>
    <ul class="flex space-x-6 m-auto pr-6 font-bold">
      {
        tabs.map((tab) => (
          <li class="transition-all hover:-translate-y-0.5 cursor-pointer duration-500">
            {tab}
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  .my-box {
    box-shadow: 0px 0px 50px rgba(0, 0, 0, 1);
  }
</style>

---
const { title, description, href } = Astro.props;
---

<div class="px-4 md:px-6 xl:px-0">
  <a
    class="bg-black dark:bg-white dark:text-black flex flex-col w-full md:w-[50vw] max-w-2xl rounded-3xl cursor-pointer transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl p-6 md:p-8 text-white group relative overflow-hidden mx-auto"
    href={href}
    target="_blank"
  >
    <div
      class="absolute inset-0 bg-gradient-to-br from-black/50 to-black/10 dark:from-white/50 dark:to-white/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    >
    </div>
    <div class="flex flex-col sm:flex-row sm:space-x-6 sm:items-center relative z-10">
      <div class="flex justify-center mb-4 sm:mb-0 sm:block sm:flex-shrink-0">
        <slot />
      </div>
      <div class="flex-1 text-center sm:text-left">
        <div class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold mb-2">
          {title}
        </div>
        <div class="w-12 h-1 bg-white dark:bg-black rounded-full mx-auto sm:mx-0"></div>
      </div>
    </div>
    <div
      class="font-medium text-[#c0c0c0] dark:text-[#303030] mt-6 leading-relaxed relative z-10 text-center sm:text-left"
    >
      {description}
    </div>
  </a>
</div>

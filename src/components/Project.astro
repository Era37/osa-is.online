---
import { type ProjectType } from "../types/project";

const { name, logo, href } = Astro.props as ProjectType;
---

<div class="space-y-1 sm:ml-3 relative">
  <div class="flex gap-3">
    <img src={logo} />
    <p class="font-bold text-2xl">{name}</p>
  </div>
  <a
    href={href}
    target="_blank"
    aria-label={`Go to ${name}`}
    class="inset-0 absolute z-20 cursor-pointer"></a>
</div>
